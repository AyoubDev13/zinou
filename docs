  function isInvalidInput(value) {
    const trimmed = value.trim();
    return (
      trimmed.length < 3 ||
      /^([a-zA-Z\u0621-\u064A])\1{2,}$/.test(trimmed) || // ŸÜŸÅÿ≥ ÿßŸÑÿ≠ÿ±ŸÅ ŸÖŸÉÿ±ÿ± ÿ£ŸÉÿ´ÿ± ŸÖŸÜ 3 ŸÖÿ±ÿßÿ™
      /(.)\1{2,}/.test(trimmed) ||                      // ÿ£Ÿä ÿ±ŸÖÿ≤ ŸÖŸÉÿ±ÿ±
      /^(ÿ∂)+$/.test(trimmed) ||                         // ŸÅŸÇÿ∑ "ÿ∂ÿ∂ÿ∂ÿ∂"
      trimmed === "asd" || trimmed === "test" || trimmed === "xxx"
    );
  }
  function showAlert(message, color = "#333") {
  const alertBox = document.getElementById("custom-alert");
  alertBox.style.backgroundColor = color;
  alertBox.textContent = message;
  alertBox.style.display = "block";

  setTimeout(() => {
    alertBox.style.display = "none";
  }, 3000);
}

  function sendOrderToTelegram() {
  const name = document.getElementById("name").value.trim();
  const phone = document.getElementById("phone").value.trim();
  const address = document.getElementById("address").value.trim();
  const city = document.getElementById("city").value;
  const currency = document.getElementById("currency").value;

  if (!name || !phone || !address || !city || !currency) {
    showAlert("Ÿäÿ±ÿ¨Ÿâ ŸÖŸÑÿ° ÿ¨ŸÖŸäÿπ ÿßŸÑÿ≠ŸÇŸàŸÑ.");
    return;
  }

  if (isInvalidInput(name)) {
    alert("Ÿäÿ±ÿ¨Ÿâ ÿ•ÿØÿÆÿßŸÑ ÿßÿ≥ŸÖ ÿµÿßŸÑÿ≠.");
    return;
  }

  if (!/^[0-9]{8,13}$/.test(phone)) {
    showAlert("Ÿäÿ±ÿ¨Ÿâ ÿ•ÿØÿÆÿßŸÑ ÿ±ŸÇŸÖ Ÿáÿßÿ™ŸÅ ÿµÿßŸÑÿ≠.");
    return;
  }

  if (isInvalidInput(address)) {
    showAlert("Ÿäÿ±ÿ¨Ÿâ ÿ•ÿØÿÆÿßŸÑ ÿπŸÜŸàÿßŸÜ ÿµÿßŸÑÿ≠.");
    return;
  }

  let message = `üõí ÿ∑ŸÑÿ® ÿ¨ÿØŸäÿØ ŸÖŸÜ Al Rayhan House:\n\n`;
  cart.forEach((product, index) => {
    message += `${index + 1}. ${product.title} - ${product.price} x${product.quantity || 1}\n`;
  });

  message += `\nüë§ ÿßŸÑÿßÿ≥ŸÖ: ${name}\nüìû ÿßŸÑŸáÿßÿ™ŸÅ: ${phone}\nüèôÔ∏è ÿßŸÑŸàŸÑÿßŸäÿ©: ${city}\nüìç ÿßŸÑÿπŸÜŸàÿßŸÜ: ${address}\nüí∞ ÿßŸÑÿπŸÖŸÑÿ©: ${currency}`;

  const token = "8217675052:AAF6c9F08yF3D2IK-qz2i9BJqsYpHRcs048"; // ÿ™ŸàŸÉŸÜ ÿßŸÑÿ®Ÿàÿ™
  const chatId = "1786977941"; // ŸÖÿπÿ±ŸÅ ÿßŸÑÿ¥ÿßÿ™

  fetch(`https://api.telegram.org/bot${token}/sendMessage`, {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({
      chat_id: chatId,
      text: message
    })
  })
  .then(response => {
    if (response.ok) {
      showAlert("‚úÖ ÿ™ŸÖ ÿ•ÿ±ÿ≥ÿßŸÑ ÿßŸÑÿ∑ŸÑÿ® ÿ®ŸÜÿ¨ÿßÿ≠!");
      localStorage.removeItem("cartData");
      location.reload();
    } else {
      alert("‚ùå ÿ≠ÿØÿ´ ÿÆÿ∑ÿ£ ÿ£ÿ´ŸÜÿßÿ° ÿ•ÿ±ÿ≥ÿßŸÑ ÿßŸÑÿ∑ŸÑÿ®.");
    }
  })
  .catch(error => {
    console.error("Error:", error);
    alert("‚ö†Ô∏è ŸÅÿ¥ŸÑ ÿßŸÑÿßÿ™ÿµÿßŸÑ ÿ®ŸÄ Telegram.");
  });
}



