  let cart = JSON.parse(localStorage.getItem("cartData")) || [];

  const checkoutList = document.getElementById("checkoutList");
  const totalQuantity = document.querySelector(".totalQuantity");
  const totalPrice = document.querySelector(".totalPrice");

  let quantity = 0;
  let price = 0;

  // ÿπÿ±ÿ∂ ÿßŸÑŸÖŸÜÿ™ÿ¨ÿßÿ™ ŸÖŸÜ ÿßŸÑÿ≥ŸÑÿ©
  if (cart.length === 0) {
    checkoutList.innerHTML = "<p>ÿßŸÑÿ≥ŸÑÿ© ŸÅÿßÿ±ÿ∫ÿ©.</p>";
  } else {
    cart.forEach((product, index) => {
      quantity += product.quantity || 1;
      const rawPrice = parseFloat(product.price.replace(/[^\d]/g, ""));
      price += rawPrice * (product.quantity || 1);

      const item = document.createElement("div");
      item.classList.add("item");
      item.innerHTML = `
        <img src="${product.image || ''}" alt="product">
        <div>${product.title}</div>
        <div>x${product.quantity || 1}</div>
        <div>${product.price}</div>
      `;
      checkoutList.appendChild(item);
    });
  }

  // ÿπÿ±ÿ∂ ÿßŸÑŸÉŸÖŸäÿ© ŸàÿßŸÑÿ≥ÿπÿ± ÿßŸÑŸÉŸÑŸä
  totalQuantity.textContent = quantity;
  totalPrice.textContent = price + " DZD";

  // ÿ•ÿ±ÿ≥ÿßŸÑ ÿßŸÑÿ∑ŸÑÿ® ÿ•ŸÑŸâ Telegram
  function sendOrderToTelegram() {
    if (cart.length === 0) {
      showAlert("ÿßŸÑÿ≥ŸÑÿ© ŸÅÿßÿ±ÿ∫ÿ©!");
      return;
    }

    const name = document.getElementById("name").value.trim();
    const phone = document.getElementById("phone").value.trim();
    const address = document.getElementById("address").value.trim();
    const city = document.getElementById("city").value;
    const currency = document.getElementById("currency").value;

    if (!name || !phone || !address || !city || !currency) {
    showAlert("Ÿäÿ±ÿ¨Ÿâ ŸÖŸÑÿ° ÿ¨ŸÖŸäÿπ ÿßŸÑÿ≠ŸÇŸàŸÑ.");
    return;
  }

    let message = "üõí ÿ∑ŸÑÿ® ÿ¨ÿØŸäÿØ ŸÖŸÜ Al Rayhan House:\n\n";
    cart.forEach((product, index) => {
      message += `${index + 1}. ${product.title} - ${product.price} x${product.quantity || 1}\n`;
    });
  message += `\nüë§ ÿßŸÑÿßÿ≥ŸÖ: ${name}\nüìû ÿßŸÑŸáÿßÿ™ŸÅ: ${phone}\nüèôÔ∏è ÿßŸÑŸàŸÑÿßŸäÿ©: ${city}\nüìç ÿßŸÑÿπŸÜŸàÿßŸÜ: ${address}\nüí∞ ÿßŸÑÿπŸÖŸÑÿ©: ${currency}`;


    const token = "8217675052:AAF6c9F08yF3D2IK-qz2i9BJqsYpHRcs048"; // ‚Üê ÿßÿ≥ÿ™ÿ®ÿØŸÑŸá ÿ®ÿ™ŸàŸÉŸÜ ÿ®Ÿàÿ™ŸÉ
    const chatId = "1786977941"; // ‚Üê ÿßÿ≥ÿ™ÿ®ÿØŸÑŸá ÿ®ŸÄ chat ID ÿßŸÑÿÆÿßÿµ ÿ®ŸÉ

    fetch(`https://api.telegram.org/bot${token}/sendMessage`, {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        chat_id: chatId,
        text: message
      })
    })
    .then(response => {
      if (response.ok) {
        showAlert("‚úÖ ÿ™ŸÖ ÿ•ÿ±ÿ≥ÿßŸÑ ÿßŸÑÿ∑ŸÑÿ® ÿ®ŸÜÿ¨ÿßÿ≠!");
        localStorage.removeItem("cartData");
        location.reload();
      } else {
        showAlert("‚ùå ÿ≠ÿØÿ´ ÿÆÿ∑ÿ£ ÿ£ÿ´ŸÜÿßÿ° ÿ•ÿ±ÿ≥ÿßŸÑ ÿßŸÑÿ∑ŸÑÿ®.");
      }
    })
    .catch(error => {
      console.error("Error:", error);
      showAlert("‚ö†Ô∏è ŸÅÿ¥ŸÑ ÿßŸÑÿßÿ™ÿµÿßŸÑ ÿ®ŸÄ Telegram.");
    });
  }

  document.querySelector(".buttonCheckout")?.addEventListener("click", function () {
    sendOrderToTelegram();
